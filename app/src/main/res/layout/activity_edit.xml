<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditActivity" android:id="@+id/constraintLayoutEdit">

    <TextView
            android:text="@string/word_edit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textViewStatus"
            app:layout_constraintEnd_toStartOf="@+id/textViewStatus" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textViewStatus"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/image_title_edit"
            android:id="@+id/imageView4"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewStatus" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewStatus" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewStatus"/>
    <TextView
            android:text="問題"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView3" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="14dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextQuestion2"
            app:layout_constraintBottom_toTopOf="@+id/editTextQuestion2"
            app:layout_constraintStart_toStartOf="@+id/editTextQuestion2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextAnwer"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/buttonRegister"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextQuestion2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginBottom="27dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <TextView
            android:text="答え"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/editTextQuestion2" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextAnwer"
            app:layout_constraintBottom_toTopOf="@+id/editTextAnwer"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginStart="132dp" android:layout_marginEnd="133dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRegister"
            android:background="@drawable/image_button_add"
            app:layout_constraintTop_toBottomOf="@+id/editTextAnwer" android:layout_marginBottom="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/buttonBack2"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack2"
            android:background="@drawable/image_button_back"
            app:layout_constraintStart_toStartOf="@+id/buttonRegister" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegister" android:layout_marginBottom="67dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStatus"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>